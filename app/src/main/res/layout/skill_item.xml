<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="student"
            type="com.sarchimarcus.gads_learderboard.network.SkillStudent" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_folded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        android:layout_margin="20dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:orientation="horizontal"
            android:minHeight="88dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_margin="5dp"
                android:contentDescription="@string/image_view"

                app:imageUrl="@{student.badgeUrl}" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="88dp"
                android:layout_toEndOf="@id/imageView"
                android:layout_toRightOf="@id/imageView"
                android:gravity="center"


                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="mark sarchi"
                    android:paddingBottom="5dp"
                    android:text="@{String.valueOf(student.name)}"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewtitle"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewAuthor"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="@{String.valueOf(student.score ) + ` skill IQ Score, ` + String.valueOf(student.country)}"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:hint="150 skill IQ Score, Kenya"
                        android:textSize="15sp" />


                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>







